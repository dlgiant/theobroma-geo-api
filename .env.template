# Theobroma Geo API - Local Development Environment Template
# Copy this file to .env and fill in your actual local values

# Database Configuration (Local PostgreSQL with PostGIS)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/theobroma_geo_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=theobroma_geo_dev
DB_USER=postgres
DB_PASSWORD=your_password

# Application Configuration
ENVIRONMENT=development
API_VERSION=1.0.0
DEBUG=true

# CORS Configuration (Allow local development)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Logging
LOG_LEVEL=DEBUG

# Performance Testing (optional)
ENABLE_QUERY_PROFILING=true
ENABLE_PERFORMANCE_METRICS=true
